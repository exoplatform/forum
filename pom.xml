                <value>warn</value>
              </property>
              <property>
                <name>java.naming.factory.initial</name>
                <value>org.exoplatform.services.naming.SimpleContextFactory</value>
              </property>
            </systemProperties>
            <useManifestOnlyJar>false</useManifestOnlyJar>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
